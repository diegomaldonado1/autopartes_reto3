                    android:id="@+id/text2_precio_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/shalimar"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="Kit motor"
                    />

                <TextView
                    android:id="@+id/text3_precio_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/shalimar"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="100000" />
            </LinearLayout>

            <Button
                android:id="@+id/button_precio1"
